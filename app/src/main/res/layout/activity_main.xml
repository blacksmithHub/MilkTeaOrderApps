<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chanel.milkteaorderapps.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textViewMsg"
        tools:ignore="HardcodedText,InefficientWeight,Suspicious0dp"
        android:text="Yauvani Pearl Milk Tea"
        android:layout_height="20dp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="UselessParent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Okinawa  **Small**No add ons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textFlavor"
                android:layout_weight="1"
                tools:textColor="@android:color/holo_red_dark"
                tools:ignore="HardcodedText,InefficientWeight" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tap Image to change Tea Flavor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewInstn"
                android:layout_weight="1"
                tools:textColor="@color/colorPrimaryDark"
                tools:ignore="HardcodedText,InefficientWeight" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:weightSum="1"
            android:layout_weight="0.15"
            tools:ignore="InefficientWeight">

            <ImageButton
                android:layout_width="158dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/milktea5"
                android:id="@+id/imageButtonTea"
                android:scaleType="fitCenter"
                android:elevation="2dp"
                style="@style/Widget.AppCompat.ImageButton"
                android:cropToPadding="true"
                android:visibility="visible"
                android:contentDescription=""
                tools:ignore="ContentDescription,NestedWeights,UnusedAttribute"
                android:layout_weight="0.43" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageButtonAddons"
                android:layout_weight="0.61"
                style="@android:style/Widget.DeviceDefault.ImageButton"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:text="@string/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSugarlevel"
            tools:text="No Sugar"
            android:textColor="@color/colorPrimaryDark" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSugarLevel"
            android:max="4" />

        <TextView
            android:text="@string/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSize"
            android:textColor="@color/colorPrimaryDark"
            tools:text="Small" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSize"
            android:max="2" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="109dp">

            <TextView
                android:text="P 50.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPrice"
                tools:ignore="HardcodedText,InefficientWeight,UnusedAttribute"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal|bold"
                android:fontFamily="sans-serif"
                android:typeface="normal" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAddonPrice"
                android:layout_weight="0.01"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="HardcodedText,InefficientWeight" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
